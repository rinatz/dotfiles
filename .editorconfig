root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.feature]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.proto]
indent_size = 2

[{*.rb,Vagrantfile}]
indent_size = 2

[*.rst]
indent_size = 3

[*.sh]
indent_size = 4

[{*.css,*.js,*.json,*.ts,*.tsx,*.vue}]
indent_size = 2

[{*.yml,*.yaml}]
indent_size = 2
