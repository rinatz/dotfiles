[core]
	editor = vi
	autocrlf = false
	pager = delta
[diff]
	tool = vscode
	colorMoved = dimmed_zebra
[delta]
	side-by-side = true
[difftool "vscode"]
	cmd = code --new-window --wait --diff $LOCAL $REMOTE
[alias]
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
[credential]
	helper = osxkeychain
