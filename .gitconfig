[core]
	editor = vi
	autocrlf = false
	pager = delta
[pull]
	rebase = false
[diff]
	tool = vscode
	colorMoved = dimmed_zebra
[delta]
	side-by-side = true
[difftool "vscode"]
	cmd = code --new-window --wait --diff $LOCAL $REMOTE
[alias]
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	graph = "log --graph --all --date=iso --format='%C(auto)%h%C(reset)%C(auto)%d%C(reset) %s %C(cyan)<%an>%C(reset) %C(dim)%cd%C(reset)'"
[credential]
	helper = osxkeychain
