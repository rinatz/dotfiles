[core]
	editor = vi
	autocrlf = false
	pager = delta
[pull]
	rebase = false
[diff]
	tool = vscode
	colorMoved = dimmed_zebra
[delta]
	side-by-side = true
[difftool "vscode"]
	cmd = code --new-window --wait --diff $LOCAL $REMOTE
[alias]
	lg = log --graph --all --format='%C(red)%d%C(reset) %s %C(green)%an%C(reset) %C(dim)%cI%C(reset) %C(blue)%h%C(reset)'
	st = status --short --branch
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
[credential]
	helper = osxkeychain
[fetch]
	prune = true
